<div class="row">
  <div class="col-12 mb-4">
    <h1 class="display-6 fw-bold">My Movie Lists</h1>
  </div>

  <% @lists.each do |list| %>
    <div class="col-md-4 mb-4">
      <div class="card list-card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
          </h5>
        </div>
      </div>
    </div>
  <% end %>

  <div class="col-12">
    <%= link_to "Create New List", new_list_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>  
