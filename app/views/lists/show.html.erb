<div class="container py-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 fw-bold"><%= @list.name %></h1>
  </div>

  <div class="text-end mb-4">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="row">
          <div class="col-md-4">
            <%= image_tag(bookmark.movie.poster_url, class: "img-fluid") %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= bookmark.movie.title %>
                <span class="badge bg-warning">
                  <%= bookmark.movie.rating %>
                </span>
              </h5>
              <p class="card-text">
                <%= bookmark.movie.overview %>
              </p>
              <p class="card-text">
                <i>"<%= bookmark.comment %>"</i>
              </p>
              <div class="text-end">
                <%= link_to "Eliminar", bookmark_path(bookmark), method: :delete, class: "text-danger" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
